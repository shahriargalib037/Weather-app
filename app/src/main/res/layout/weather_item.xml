<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:layout_gravity="center"
    app:cardElevation="6dp"
    app:cardCornerRadius="10dp"
    android:background="@android:color/transparent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_back"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="time"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="4dp"
            android:id="@+id/idTime"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTime"
            android:text="20"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="4dp"
            android:id="@+id/idTemparatureCard"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/idTemparatureCard"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:id="@+id/idConditionCard"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idConditionCard"
            android:text="13"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="4dp"
            android:id="@+id/idWindspeed"
            />
    </RelativeLayout>
    

</androidx.cardview.widget.CardView>